
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4 ">
      <div class="form-login">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <p><%= link_to "<i class=\"fa fa-facebook\"></i> Se connecter Ã  #{OmniAuth::Utils.camelize(provider)}".html_safe, omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook d-inline btn-lg" %></p>
          <% end -%>
        <% end -%>
        <h4>ou</h4>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:'btn btn-primary' %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
