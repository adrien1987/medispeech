<div class="row drugheader">
  <div class="col-12 col-sm-8 offset-sm-2">
    <div class="title">
      <h1><%= @drug["denomination"] %></h1>
    </div>
    <div class="avis">
      <p><%= link_to "Donner mon avis sur ce médicament", review_new_path, class: "btn btn-outline-info" %></p>
    </div>
  </div>
</div>

<div class="row">

  <div class="col-12 col-sm-8">
  <%=render 'shared/card_info'%>
  <%=render 'shared/card_infoglobales'%>
  </div>
  <div class="col-12 col-sm-4">
    <%=render 'shared/card_avis'%>
  </div>
</div>

  <h2> Reviews </h2>
  <ul class="list-group">
    <% @reviews.each do |review| %>

      <li class="list-group-item">
        Efficacité <%= review.efficacy %> | sécurité <%= review.security %> | Details <%= review.description %>
      </li>
    <% end %>
  </ul>
