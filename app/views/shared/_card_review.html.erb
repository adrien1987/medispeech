<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <%= link_to review.denomination, drug_show_path(review.code_cis)  %>
    </div>
    <div class= "rates">
      <div class="secu">
        <p>Risques</p>
        <p>
          <% security = review.security %>
          <% efficacy = review.efficacy %>
          <% 5.times do |star| %>
            <% if star < security %>
              <i class="fa fa-star" style="color:  rgb(253, 203, 47)"></i>
            <% else %>
              <i class="fa fa-star" style="color:  grey"></i>
            <% end %>
          <% end %>
        </p>
      </div>

      <div class="effi">
        <p>Efficacité</p>
        <p>
          <% 5.times do |star| %>
            <% if star < efficacy %>
              <i class="fa fa-star" style="color:  rgb(253, 203, 47)"></i>
            <% else %>
              <i class="fa fa-star" style="color:  grey"></i>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.description  %></p>
      <footer class="blockquote-footer">Par <%= review.user.username %> le <cite title="Source Title"><%= review.created_at.strftime('%d/%m/%Y à %H:%M')%> </cite></footer>
    </blockquote>
    <% if current_user == review.user %>
      <%= link_to "Modifier mon avis", edit_review_path(review), class: "btn btn-primary", id: "btn" %>
    <% end %>
  </div>
</div>
