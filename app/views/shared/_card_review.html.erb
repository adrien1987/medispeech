<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <%= current_user.username %>
    </div>
    <div class="secu">
      <p>Securité</p>
      <p>
        <% safety = 3 %>
        <% efficacy = 2 %>
        <% 5.times do |star| %>
        <% if star < safety %>
        <a href=""><i class="fa fa-star" style="color:  rgb(253, 203, 47)"></a></i>
        <% else %>
        <a href=""> <i class="fa fa-star" style="color:  grey"></a></i>
        <% end %>
        <% end %>
      </p>
    </div>
    <div class="effi">
      <p>Efficacité</p>
      <p>
        <% 5.times do |star| %>
        <!-- replace with review.efficacy and delete the efficacy asignation above -->
        <% if star < efficacy %>
        <a href=""><i class="fa fa-star" style="color:  rgb(253, 203, 47)"></a></i>
        <% else %>
        <a href=""><i class="fa fa-star" style="color:  grey"></a></i>
        <% end %>
        <% end %>
      </p>
    </div>
    <div>
      <%=review.created_at.strftime('%d/%m/%Y à %H:%M')%>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.description  %></p>
      <footer class="blockquote-footer"><%= current_user.username %> le <cite title="Source Title"><%=review.created_at.strftime('%d/%m/%Y à %H:%M')%> </cite></footer>
    </blockquote>
  </div>
</div>
