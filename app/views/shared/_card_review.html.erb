<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
    <% if review.user.username.present?  %>
      <%= review.user.username %>
    <% else %>
      <%= review.user.first_name %>
    <% end %>
    </div>
    <div class="secu">
      <p>Securité</p>
      <p>
        <% security = review.security %>
        <% efficacy = review.efficacy %>
        <% 5.times do |star| %>
          <% if star < security %>
            <i class="fa fa-star" style="color:  rgb(253, 203, 47)"></i>
          <% else %>
            <i class="fa fa-star" style="color:  grey"></i>
          <% end %>
        <% end %>
      </p>
    </div>
    <div class="effi">
      <p>Efficacité</p>
      <p>
        <% 5.times do |star| %>
          <% if star < efficacy %>
            <i class="fa fa-star" style="color:  rgb(253, 203, 47)"></i>
          <% else %>
            <i class="fa fa-star" style="color:  grey"></i>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.description  %></p>
      <footer class="blockquote-footer"><%= review.user.username %> le <cite title="Source Title"><%= review.created_at.strftime('%d/%m/%Y à %H:%M')%> </cite></footer>
    </blockquote>
  </div>
</div>
