<div class="card card_index col-sm-8 offset-sm-2">
  <div class="card-header d-flex justify-content-between align-items-center flex-wrap text-truncate">
    <div>
      <%= drug[:denomination] %>
      <!-- <%= drug['indicationsTherapeutiques'] %>       -->
    </div>
    <div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li><a href=""><i class="fa fa-share" style="color:  grey"></i></a></li>
        <% if @codes_cis.include? drug[:codeCIS] %>
          <%= link_to '<i class="fa fa-heart" style="color: #D3473C"></i>'.html_safe,
          put_in_favorite_path(drug[:codeCIS], params[:query]) %>
        <% else %>
          <%= link_to '<i class="fa fa-heart"></i>'.html_safe,
          put_in_favorite_path(drug[:codeCIS], params[:query]) %>
        <% end %>
      </ul>
    </div>
  </div>
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <p>Efficacité</p>
        <p>Effets secondaires </p>
      </div>
      <div>
        <p>
          <% safety = 3 %>
          <% efficacy = 2 %>
          <% 5.times do |star| %>
          <% if star < safety %>
          <a href=""><i class="fa fa-star" style="color:  #DAA520"></a></i>
          <% else %>
          <a href=""> <i class="fa fa-star" style="color:  grey"></a></i>
          <% end %>
          <% end %>
        </p>
        <p>
          <% 5.times do |star| %>
          <!-- replace with review.efficacy and delete the efficacy asignation above -->
          <% if star < efficacy %>
          <a href=""><i class="fa fa-star" style="color:  #DAA520"></a></i>
          <% else %>
          <a href=""><i class="fa fa-star" style="color:  grey"></a></i>
          <% end %>
          <% end %>
        </p>
      </div>
      <%= link_to "Savoir plus", drug_show_path(drug[:codeCIS]), class: "btn btn-primary" %>
    </div>
  </div>




