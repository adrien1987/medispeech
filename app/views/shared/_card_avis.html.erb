
<div class="avisutilisateur">
  <div class="card securitecard">
    <h2>Effets indésirables</h2>
    <% code_cis = params["code_cis"] %>
    Aucun (<%= @reviews.size %>  avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-info" role="progressbar" style="width: 15%;" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100"> <%= DrugService.getReviewSecurityNotesForDrug(code_cis, 1) %>% </div>
    </div>
    Mineurs (<%= @reviews.size %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= DrugService.getReviewSecurityNotesForDrug(code_cis, 2) %>%</div>
    </div>
    Modérés (<%= @reviews.size %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= DrugService.getReviewSecurityNotesForDrug(code_cis, 3) %>%</div>
    </div>
    Majeurs (<%= @reviews.size %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= DrugService.getReviewSecurityNotesForDrug(code_cis, 4) %>%</div>
    </div>
    Graves (<%= @reviews.size %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-dark" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= DrugService.getReviewSecurityNotesForDrug(code_cis, 5) %>%</div>
    </div>
  </div>

  <div class="card efficacitecard">





    <h2>Efficacité</h2>
    <h3>note moyenne</h3>
    <% efficacy = DrugService.getAverageReviewsNoteForDrug(code_cis, "efficacy") %>
    <p class="notemoyenne"> <%= efficacy %></p>
    <p class="etoiles">

      <% 5.times do |star| %>
      <!-- replace with review.efficacy and delete the efficacy asignation above -->
      <% if star < efficacy %>
      <a href=""><i class="fa fa-star" style="color:  rgb(253, 203, 47)"></a></i>
      <% else %>
      <a href=""><i class="fa fa-star" style="color:  grey"></a></i>
      <% end %>
      <% end %>
    </p>
    <p class="nombredenote"><%= @reviews.size %> notes</p>
  </div>

</div>
