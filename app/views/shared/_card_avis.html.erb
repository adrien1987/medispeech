
<div class="avisutilisateur">
  <div class="card securitecard">
    <h2>Effets indésirables</h2>
    <% code_cis = params["code_cis"] %>
    <% aucun = DrugService.getReviewSecurityNotesForDrug(code_cis, 1) %>
    <% mineur = DrugService.getReviewSecurityNotesForDrug(code_cis, 2) %>
    <% modere = DrugService.getReviewSecurityNotesForDrug(code_cis, 3) %>
    <% majeur = DrugService.getReviewSecurityNotesForDrug(code_cis, 4) %>
    <% grave = DrugService.getReviewSecurityNotesForDrug(code_cis, 5) %>
    Aucun (<%= aucun.first %>  avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-info" role="progressbar" style="width: <%= aucun.last %>%;" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100">
        <%= aucun.last %>% </div>
    </div>
    Mineurs (<%= mineur.first %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-success" role="progressbar" style="width: <%= mineur.last %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <%= mineur.last %>%</div>
    </div>
    Modérés (<%= modere.first %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-warning" role="progressbar" style="width: <%= modere.last %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
      <%= modere.last %>%</div>
    </div>
    Majeurs (<%= majeur.first %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-danger" role="progressbar" style="width: <%= majeur.last %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <%= majeur.last %>%</div>
    </div>
    Graves (<%= grave.first %> avis)
    <div class="progress barprogression">
      <div class="progress-bar bg-dark" role="progressbar" style="width: <%= grave.last %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <%= grave.last %>%</div>
    </div>
  </div>

  <div class="card efficacitecard">





    <h2>Efficacité</h2>
    <h3>note moyenne</h3>
    <% efficacy = DrugService.getAverageReviewsNoteForDrug(code_cis, "efficacy") %>
    <p class="notemoyenne"> <%= efficacy %></p>
    <p class="etoiles">

      <% 5.times do |star| %>
      <!-- replace with review.efficacy and delete the efficacy asignation above -->
      <% if star < efficacy %>
      <a href=""><i class="fa fa-star" style="color:  rgb(253, 203, 47)"></a></i>
      <% else %>
      <a href=""><i class="fa fa-star" style="color:  grey"></a></i>
      <% end %>
      <% end %>
    </p>
    <p class="nombredenote"><%= @reviews.size %> notes</p>
  </div>

</div>
